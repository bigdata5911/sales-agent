# Application Settings
APP_NAME=AI Sales Agent
DEBUG=false
VERSION=1.0.0

# Server Settings
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=["*"]

# Database Settings
DATABASE_URL=postgresql://user:password@localhost/sales_agent

# OpenAI Settings
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Twilio Settings
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_SECRET=your-webhook-secret-here

# Privyr CRM Settings
PRIVYR_API_KEY=your-privyr-api-key-here
PRIVYR_WEBHOOK_SECRET=your-privyr-webhook-secret-here
PRIVYR_BASE_URL=https://api.privyr.com

# Redis Settings
REDIS_URL=redis://localhost:6379

# Security Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Settings
LOG_LEVEL=INFO

# AI Agent Settings
MAX_RETRIES=3
MESSAGE_DELAY_SECONDS=60
FOLLOW_UP_DELAY_HOURS=24
MAX_CONVERSATION_LENGTH=10

# Analytics Settings
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90 